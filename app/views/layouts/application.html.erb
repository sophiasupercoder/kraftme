<!DOCTYPE html>
<html>
  <head>
    <title>Kraftme</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <p id="alert"><%= alert %></p>

    <% if user_signed_in? %>
      <h4>Logged in as <%= current_user.email %></h4>
      <p><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></p>
      <p><%= link_to 'Update Profile', edit_user_registration_path %></p>
       <%# link for user products %>
      <p><%= link_to 'My Products', userproducts_path(current_user) %></p>
    <% else %>
      <%= link_to 'Login or Sign Up!', new_user_session_path %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
