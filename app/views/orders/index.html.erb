<%# view for all order transactions, should only be accessed by admin%>
<h1>Orders Index</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
            <th>Quantity</th>
      <th>Price</th>
      <th>Image</th>
      <th>Buyer</th>
      <th>Seller</th>
      <th>Purchase Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.product_title %></td>
        <td><%= order.quantity %></td>
        <td><%= order.price %></td>
        <td>  <% if order.product.image.attached? %>
        <%= cl_image_tag(order.product.image.key, :width=>100, :crop=>"fit") %>
        <% end %></td>
        <td><%= order.buyer.username %></td>
        <td><%= order.seller.username %></td> 
        <td><%= order.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>